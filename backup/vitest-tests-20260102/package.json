{
  "name": "predicte",
  "displayName": "Predicte",
  "description": "Lightweight AI-powered autocomplete using Mistral's Codestral model",
  "version": "0.1.0",
  "publisher": "predicte",
  "license": "MIT",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Machine Learning",
    "Other"
  ],
  "keywords": [
    "autocomplete",
    "codestral",
    "mistral",
    "ai",
    "code completion",
    "lightweight",
    "fim"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:python",
    "onLanguage:java",
    "onLanguage:cpp",
    "onLanguage:csharp",
    "onLanguage:go",
    "onLanguage:rust",
    "onLanguage:php",
    "onLanguage:ruby",
    "onLanguage:swift",
    "onLanguage:kotlin",
    "onLanguage:scala",
    "onLanguage:html",
    "onLanguage:css",
    "onLanguage:json",
    "onLanguage:markdown",
    "onLanguage:yaml",
    "onLanguage:xml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Predicte",
      "properties": {
        "predicte.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable Predicte autocomplete",
          "order": 1
        },
        "predicte.apiBaseUrl": {
          "type": "string",
          "enum": [
            "https://api.mistral.ai",
            "https://codestral.mistral.ai"
          ],
          "default": "https://codestral.mistral.ai",
          "enumDescriptions": [
            "Use regular Mistral API (for Mistral API keys)",
            "Use Codestral API (recommended, for Codestral-specific API keys)"
          ],
          "description": "API base URL - use codestral.mistral.ai for Codestral API keys, api.mistral.ai for regular Mistral API keys. Do NOT include /v1 in the URL.",
          "order": 2
        },
        "predicte.model": {
          "type": "string",
          "enum": [
            "codestral-latest",
            "codestral-22b",
            "codestral-2404"
          ],
          "default": "codestral-latest",
          "enumDescriptions": [
            "Latest Codestral model (best quality)",
            "Smaller, faster Codestral model",
            "April 2024 version"
          ],
          "description": "Codestral model to use",
          "order": 3
        },
        "predicte.maxTokens": {
          "type": "number",
          "default": 100,
          "minimum": 1,
          "maximum": 500,
          "description": "Maximum completion tokens",
          "order": 4
        },
        "predicte.temperature": {
          "type": "number",
          "default": 0.1,
          "minimum": 0,
          "maximum": 1,
          "description": "Sampling temperature (lower = more deterministic)",
          "order": 5
        },
        "predicte.debounceDelay": {
          "type": "number",
          "default": 150,
          "minimum": 50,
          "maximum": 1000,
          "description": "Delay before triggering autocomplete (ms). Based on Zed's Codestral timing research, 150ms provides optimal balance between responsiveness and rate limiting.",
          "order": 6
        },
        "predicte.contextLines": {
          "type": "number",
          "default": 50,
          "minimum": 5,
          "maximum": 100,
          "description": "Number of context lines to include",
          "order": 7
        },
        "predicte.enhancedContextEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable enhanced context extraction (imports, function/class definitions, type definitions)",
          "order": 8
        },
        "predicte.enableStreaming": {
          "type": "boolean",
          "default": true,
          "description": "Use streaming for completions",
          "order": 8
        },
        "predicte.cacheEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable completion caching",
          "order": 9
        },
        "predicte.cacheTTL": {
          "type": "number",
          "default": 60000,
          "minimum": 1000,
          "maximum": 600000,
          "description": "Cache TTL in milliseconds",
          "order": 10
        },
        "predicte.requestTimeout": {
          "type": "number",
          "default": 30000,
          "minimum": 5000,
          "maximum": 120000,
          "description": "Request timeout in milliseconds",
          "order": 11
        },
        "predicte.promptEngineeringEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable prompt engineering with language-specific system messages for better completion quality",
          "order": 12
        },
        "predicte.languageAwareParametersEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable language-specific model parameters (temperature, maxTokens, stop sequences) optimized for each programming language",
          "order": 13
        },
        "predicte.qualityFilteringEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable quality filtering and ranking for completion candidates (requests multiple completions and selects the best one)",
          "order": 14
        },
        "predicte.numCandidates": {
          "type": "number",
          "default": 3,
          "minimum": 1,
          "maximum": 5,
          "description": "Number of completion candidates to request when quality filtering is enabled (more candidates = better quality but slower)",
          "order": 15
        },
        "predicte.debugMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging for troubleshooting (enables verbose debug logs in the output panel)",
          "order": 16
        },
        "predicte.enableKeybindings": {
          "type": "boolean",
          "default": true,
          "description": "Enable keyboard shortcuts for multi-granularity completion acceptance",
          "order": 17
        },
        "predicte.enablePerformanceMonitoring": {
          "type": "boolean",
          "default": true,
          "description": "Enable performance monitoring and metrics collection",
          "order": 18
        },
        "predicte.enableStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show Predicte status bar items (toggle and loading indicator)",
          "order": 19
        },
        "predicte.enableConflictResolution": {
          "type": "boolean",
          "default": true,
          "description": "Enable conflict resolution between LSP and AI completions",
          "order": 20
        },
        "predicte.hideWhenLSPActive": {
          "type": "boolean",
          "default": true,
          "description": "Hide AI completions when LSP menu is visible",
          "order": 21
        },
        "predicte.modifierKeyForPreview": {
          "type": "string",
          "enum": [
            "alt",
            "ctrl",
            "none"
          ],
          "default": "alt",
          "description": "Modifier key to preview AI completions when LSP menu is visible",
          "order": 22
        },
        "predicte.enableContinuationDetection": {
          "type": "boolean",
          "default": true,
          "description": "Automatically detect incomplete code and trigger follow-up completions",
          "order": 23
        },
        "predicte.continuationDelay": {
          "type": "number",
          "default": 100,
          "minimum": 50,
          "maximum": 500,
          "description": "Delay in milliseconds before triggering continuation detection",
          "order": 24
        }
      }
    },
    "commands": [
      {
        "command": "predicte.toggle",
        "title": "Predicte: Toggle Autocomplete"
      },
      {
        "command": "predicte.setApiKey",
        "title": "Predicte: Set API Key"
      },
      {
        "command": "predicte.clearCache",
        "title": "Predicte: Clear Cache"
      },
      {
        "command": "predicte.showStatus",
        "title": "Predicte: Show Status"
      },
      {
        "command": "predicte.acceptWord",
        "title": "Predicte: Accept Word"
      },
      {
        "command": "predicte.acceptLine",
        "title": "Predicte: Accept Line"
      },
      {
        "command": "predicte.acceptFull",
        "title": "Predicte: Accept Full"
      },
      {
        "command": "predicte.showMetrics",
        "title": "Predicte: Show Performance Metrics"
      }
    ],
    "keybindings": [
      {
        "command": "predicte.toggle",
        "key": "ctrl+alt+c",
        "mac": "cmd+alt+c"
      },
      {
        "command": "predicte.acceptFull",
        "key": "tab",
        "when": "editorHasInlineCompletion && config.predicte.enableKeybindings != false && !editorHasCompletionSuggestions"
      },
      {
        "command": "predicte.acceptFull",
        "key": "tab",
        "when": "editorHasInlineCompletion && editorHasCompletionSuggestions && altKey"
      },
      {
        "command": "predicte.acceptWord",
        "key": "ctrl+right",
        "when": "editorHasInlineCompletion && config.predicte.enableKeybindings != false && !editorHasCompletionSuggestions"
      },
      {
        "command": "predicte.acceptWord",
        "key": "ctrl+right",
        "when": "editorHasInlineCompletion && editorHasCompletionSuggestions && altKey"
      },
      {
        "command": "predicte.acceptLine",
        "key": "ctrl+down",
        "when": "editorHasInlineCompletion && config.predicte.enableKeybindings != false && !editorHasCompletionSuggestions"
      },
      {
        "command": "predicte.acceptLine",
        "key": "ctrl+down",
        "when": "editorHasInlineCompletion && editorHasCompletionSuggestions && altKey"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest",
    "test:unit:run": "vitest run",
    "test:unit:coverage": "vitest run --coverage",
    "test:unit:watch": "vitest watch",
    "test:unit:ui": "vitest --ui",
    "test:e2e": "vscode-test",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "25.0.3",
    "@types/vscode": "^1.107.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@mistralai/mistralai": "^1.11.0",
    "zod": "^4.2.1"
  }
}
