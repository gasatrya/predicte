{
  "name": "predicte",
  "displayName": "Predicte",
  "description": "Lightweight AI-powered autocomplete using Mistral's Codestral model",
  "version": "1.0.0",
  "publisher": "GaSatrya",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gasatrya/predicte.git"
  },
  "bugs": {
    "url": "https://github.com/gasatrya/predicte/issues"
  },
  "homepage": "https://github.com/gasatrya/predicte#readme",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Machine Learning",
    "Other"
  ],
  "keywords": [
    "autocomplete",
    "codestral",
    "mistral",
    "ai",
    "code completion",
    "lightweight",
    "fim"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:python",
    "onLanguage:java",
    "onLanguage:cpp",
    "onLanguage:csharp",
    "onLanguage:go",
    "onLanguage:rust",
    "onLanguage:php",
    "onLanguage:ruby",
    "onLanguage:swift",
    "onLanguage:kotlin",
    "onLanguage:scala",
    "onLanguage:html",
    "onLanguage:css",
    "onLanguage:json",
    "onLanguage:markdown",
    "onLanguage:yaml",
    "onLanguage:xml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Predicte",
      "properties": {
        "predicte.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable Predicte autocomplete",
          "order": 1
        },
        "predicte.apiBaseUrl": {
          "type": "string",
          "enum": [
            "https://api.mistral.ai",
            "https://codestral.mistral.ai"
          ],
          "default": "https://codestral.mistral.ai",
          "enumDescriptions": [
            "Use regular Mistral API (for Mistral API keys)",
            "Use Codestral API (recommended, for Codestral-specific API keys)"
          ],
          "description": "API base URL - use codestral.mistral.ai for Codestral API keys, api.mistral.ai for regular Mistral API keys.",
          "order": 2
        },
        "predicte.debugMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging for troubleshooting (enables verbose debug logs in the output panel)",
          "order": 16
        },
        "predicte.enableKeybindings": {
          "type": "boolean",
          "default": true,
          "description": "Enable keyboard shortcuts for multi-granularity completion acceptance",
          "order": 17
        },
        "predicte.enableStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show Predicte status bar items (toggle and loading indicator)",
          "order": 19
        }
      }
    },
    "menus": {
      "commandPalette": [
        {
          "command": "predicte.acceptWord",
          "when": "false"
        },
        {
          "command": "predicte.acceptLine",
          "when": "false"
        },
        {
          "command": "predicte.acceptFull",
          "when": "false"
        }
      ]
    },
    "commands": [
      {
        "command": "predicte.toggle",
        "title": "Predicte: Toggle Autocomplete"
      },
      {
        "command": "predicte.setApiKey",
        "title": "Predicte: Set API Key"
      },
      {
        "command": "predicte.clearCache",
        "title": "Predicte: Clear Cache"
      },
      {
        "command": "predicte.showStatus",
        "title": "Predicte: Show Status"
      },
      {
        "command": "predicte.acceptWord",
        "title": "Predicte: Accept Word"
      },
      {
        "command": "predicte.acceptLine",
        "title": "Predicte: Accept Line"
      },
      {
        "command": "predicte.acceptFull",
        "title": "Predicte: Accept Full"
      },
      {
        "command": "predicte.showMetrics",
        "title": "Predicte: Show Performance Metrics"
      }
    ],
    "keybindings": [
      {
        "command": "predicte.toggle",
        "key": "ctrl+alt+c",
        "mac": "cmd+alt+c"
      },
      {
        "command": "predicte.acceptFull",
        "key": "tab",
        "when": "editorHasInlineCompletion && config.predicte.enableKeybindings != false && !editorHasCompletionSuggestions"
      },
      {
        "command": "predicte.acceptWord",
        "key": "ctrl+right",
        "when": "editorHasInlineCompletion && config.predicte.enableKeybindings != false && !editorHasCompletionSuggestions"
      },
      {
        "command": "predicte.acceptLine",
        "key": "ctrl+down",
        "when": "editorHasInlineCompletion && config.predicte.enableKeybindings != false && !editorHasCompletionSuggestions"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "test": "vscode-test",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.5",
    "@types/vscode": "^1.108.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "@mistralai/mistralai": "^1.11.0"
  }
}
