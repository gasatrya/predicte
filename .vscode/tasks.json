{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "watch",
            "problemMatcher": "$tsc",
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "npm",
            "script": "compile",
            "problemMatcher": "$tsc",
            "presentation": {
                "reveal": "silent"
            },
            "group": "build"
        },
        {
            "type": "npm",
            "script": "lint",
            "problemMatcher": "$eslint-stylish",
            "presentation": {
                "reveal": "always"
            },
            "group": "test"
        },
        {
            "type": "npm",
            "script": "format:check",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "type": "npm",
            "script": "package",
            "problemMatcher": "$tsc",
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        }
    ]
}
